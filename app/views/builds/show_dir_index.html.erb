<h3>Listing <%= params[:path] %> </h3>
<table>
  <tr>
    <th>File</th>
    <th>Last Modified</th>
    <th>Size</th>
    <th>Type</th>
  </tr>
  <% @build.files_in(params[:path]).each do |f| %>
  <tr>
    <td><a href="<%= url_for({:path => f, :only_path => false}) %>"><%= f %></a></td>
    <td><%= file_mtime(f) %></td>
    <td><%= file_size(f) rescue 0 %> bytes</td>
    <td><%= file_type(f) %></td>
  </tr>
  <% end %>
</table>
